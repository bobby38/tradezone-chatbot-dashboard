{
  "name": "git-server",
  "description": "Git operations MCP server",
  "version": "1.0.0",
  "server": {
    "command": "docker",
    "args": [
      "run",
      "--rm",
      "-i",
      "-v", "/Users/bobbymini/Documents/tradezone-chatbot-dashboard:/workspace",
      "ghcr.io/modelcontextprotocol/servers/git:latest"
    ]
  },
  "tools": [
    {
      "name": "git_status",
      "description": "Get git status",
      "parameters": {
        "type": "object",
        "properties": {
          "path": {
            "type": "string",
            "description": "Path to check git status"
          }
        }
      }
    },
    {
      "name": "git_add",
      "description": "Add files to git staging",
      "parameters": {
        "type": "object",
        "properties": {
          "files": {
            "type": "array",
            "items": {"type": "string"},
            "description": "Files to add"
          }
        }
      }
    },
    {
      "name": "git_commit",
      "description": "Commit staged changes",
      "parameters": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "description": "Commit message"
          },
          "author": {
            "type": "string",
            "description": "Author name and email"
          }
        }
      }
    },
    {
      "name": "git_push",
      "description": "Push commits to remote",
      "parameters": {
        "type": "object",
        "properties": {
          "remote": {
            "type": "string",
            "description": "Remote name (default: origin)"
          },
          "branch": {
            "type": "string",
            "description": "Branch name (default: current branch)"
          }
        }
      }
    },
    {
      "name": "git_pull",
      "description": "Pull changes from remote",
      "parameters": {
        "type": "object",
        "properties": {
          "remote": {
            "type": "string",
            "description": "Remote name (default: origin)"
          },
          "branch": {
            "type": "string",
            "description": "Branch name (default: current branch)"
          }
        }
      }
    },
    {
      "name": "git_log",
      "description": "Show git log",
      "parameters": {
        "type": "object",
        "properties": {
          "limit": {
            "type": "number",
            "description": "Number of commits to show"
          },
          "oneline": {
            "type": "boolean",
            "description": "Show one line per commit"
          }
        }
      }
    }
  ]
}
